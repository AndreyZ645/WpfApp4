<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Языки программирования" Height="450" Width="800">
    <Grid>
        <TreeView>
            <TreeViewItem Header="Компилируемые языки">
                <TreeViewItem Header="C" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="C++" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="C#" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="Java" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="Go" Selected="TreeViewItem_Selected"/>
            </TreeViewItem>
            <TreeViewItem Header="Интерпретируемые языки">
                <TreeViewItem Header="Python" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="JavaScript" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="Ruby" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="PHP" Selected="TreeViewItem_Selected"/>
                <TreeViewItem Header="Perl" Selected="TreeViewItem_Selected"/>
            </TreeViewItem>
        </TreeView>
    </Grid>
</Window>
